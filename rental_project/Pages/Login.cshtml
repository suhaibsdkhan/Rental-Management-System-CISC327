@page "/login"
@model rental_project.Pages.auth.Login

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <!-- Include Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/Login.css"/>
</head>
<body>
    <div class="container mt-5">
        <div class="card rounded-lg ios-style-card">
            <div class="card-body">
                <div class="row">
                    <!-- Login Section -->
                    <div class="col-md-6">
                        <h3 class="renty">Renty</h3>
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h3>Login To Your Account</h3>
                            </div>
                            <div class="card-body">
                                <!-- Social Login Icons (Optional) -->
                                <div class="text-center mb-3">
                                    <img src="~/google-logo.png" alt="Google Login" width="50" class="mr-2">
                                    <span>or</span>
                                    <img src="~/facebook-logo.png" alt="Facebook Login" width="50">
                                </div>
                                <!-- Login Form -->
                                <form method="post" onsubmit="return false;">
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control translucent-pill" id="email" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password" required />
                                    </div>
                                    <button type="button" class="btn btn-primary btn-block" id="login-button">Login</button>
                                    <!-- Login Error Message -->
                                    <div id="login-error" class="text-danger mt-2"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Sign-Up Section -->
                    <div class="col-md-6 d-flex flex-column justify-content-center align-items-center pill-background">
                        <div class="text-center mb-3">
                            <h3>No account?</h3>
                            <p>You can always</p>
                        </div>
                        <!-- Sign-Up Button to Trigger Modal -->
                        <button type="button" class="btn btn-outline-primary btn-lg" id="open-signup-modal" data-toggle="modal" data-target="#signupModal">Sign Up</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Updated Sign-Up Modal in Login.cshtml -->
    <div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title w-100 text-center" id="signupModalLabel">Create Your Account</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Sign-Up Form -->
                    <form id="signup-form">
                        <div class="form-group">
                            <label for="signup-email">Email</label>
                            <input type="email" class="form-control" id="signup-email" required>
                        </div>
                        <div class="form-group">
                            <label for="signup-password">Password</label>
                            <input type="password" class="form-control" id="signup-password" required>
                        </div>
                        <!-- Repeat Password Field -->
                        <div class="form-group">
                            <label for="signup-repeat-password">Repeat Password</label>
                            <input type="password" class="form-control" id="signup-repeat-password" required>
                        </div>
                        <!-- Changed button type to 'submit' -->
                        <button type="submit" class="btn btn-primary btn-block" id="signup-button">Sign Up</button>
                        <!-- Sign-Up Error Message -->
                        <div id="signup-error" class="text-danger mt-2"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Include jQuery and Bootstrap JS (necessary for Bootstrap's JavaScript components) -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Include your custom JavaScript file -->
    <script type="module" src="~/js/Login.js"></script>
</body>
</html>